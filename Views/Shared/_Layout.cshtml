<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimeWeb_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AnimeWeb_App.styles.css" asp-append-version="true" />

    <style>
        /* Asegura que el submenú se posicione correctamente */
        .dropdown-submenu {
            position: relative;
        }

            /* Coloca el submenú a la derecha del elemento padre */
            .dropdown-submenu .dropdown-menu {
                top: 0;
                left: 100%;
                margin-top: -1px; /* Ajuste fino */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AnimeWeb_App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AnimeWeb_App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Selecciona todos los elementos de submenú desplegable
            document.querySelectorAll('.dropdown-submenu a.dropdown-toggle').forEach(function (element) {

                // Asigna un evento de clic a cada enlace de submenú
                element.addEventListener('click', function (e) {

                    // Evita la acción predeterminada del enlace (navegar a '#')
                    e.preventDefault();
                    e.stopPropagation();

                    let nextEl = this.nextElementSibling;

                    // Itera sobre todos los submenús hermanos para cerrarlos (colapsarlos)
                    document.querySelectorAll('.dropdown-submenu').forEach(function(el){
                        if (el !== nextEl.closest('.dropdown-submenu')) {
                            let menu = el.querySelector('.dropdown-menu');
                            if (menu) {
                                menu.classList.remove('show');
                            }
                        }
                    });

                    // Alternar la clase 'show' para mostrar/ocultar el submenú actual
                    if (nextEl && nextEl.classList.contains('dropdown-menu')) {
                        nextEl.classList.toggle('show');
                    }
                });
            });

            // Opcional: Cerrar los submenús cuando se haga clic en cualquier otra parte del documento
            document.body.addEventListener('click', function (e) {
                 // Verifica si el clic fue fuera del dropdown principal
                 if (!e.target.closest('.dropdown')) {
                     document.querySelectorAll('.dropdown-submenu .dropdown-menu').forEach(function(el){
                        el.classList.remove('show');
                     });
                 }
            });
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
