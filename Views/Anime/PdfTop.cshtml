@model List<AnimeWeb_App.Models.Anime>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            margin: 20px;
        }
        h1 {
            text-align: center;
            margin-bottom: 30px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        th, td {
            border: 1px solid #333;
            padding: 8px;
            font-size: 14px;
        }
        th {
            background-color: #f0f0f0;
        }
        img {
            width: 60px;
            height: auto;
        }
    </style>
</head>
<body>

    <h1>Top Animes</h1>

    <table>
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Título</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var anime in Model)
            {
                <tr>
                    <td>
                        <img src="@anime.Images.Jpg.Image_Url" />
                    </td>
                    <td>@anime.Title</td>
                    
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
