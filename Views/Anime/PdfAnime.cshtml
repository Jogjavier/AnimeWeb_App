@model AnimeWeb_App.Models.Anime

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            margin: 25px;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        .cover {
            text-align: center;
            margin-bottom: 20px;
        }
        .cover img {
            width: 200px;
            height: auto;
            border-radius: 8px;
        }
        .info {
            margin-top: 20px;
            font-size: 14px;
        }
        .info p {
            margin: 5px 0;
        }
        .section-title {
            margin-top: 30px;
            font-size: 18px;
            border-bottom: 2px solid #444;
            padding-bottom: 5px;
        }
        .synopsis {
            margin-top: 10px;
            text-align: justify;
            line-height: 1.5;
        }
    </style>
</head>

<body>

    <h1>@Model.Title</h1>

    <div class="cover">
        <img src="@Model.Images.Jpg.Image_Url" />
    </div>

    <div class="info">
        <p><strong>Episodios:</strong> @Model.Episodes</p>
        <p><strong>Estado:</strong> @Model.Status</p>
        
    </div>
</body>
</html>
